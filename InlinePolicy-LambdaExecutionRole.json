{
    "Version": "2012-10-17",
    "Statement": [
        {
            "Action": [
                "glue:CreateJob",
                "glue:CreateTable",
                "glue:StartCrawler",
                "glue:CreateDatabase",
                "glue:StartJobRun",
                "glue:StopCrawler",
                "glue:CreatePartition",
                "glue:GetJob",
                "glue:StartTrigger",
                "glue:CreateCrawler"
            ],
            "Resource": "*",
            "Effect": "Allow",
            "Sid": "gluePermissions"
        },
        {
            "Effect": "Allow",
            "Action": [
                "forecast:*"
            ],
            "Resource": "*"
        },
        {
            "Action": [
                "iam:PassRole"
            ],
            "Effect": "Allow",
            "Resource": "arn:aws:iam::*:role/AWSGlueServiceRole*",
            "Condition": {
                "StringLike": {
                    "iam:PassedToService": [
                        "glue.amazonaws.com"
                    ]
                }
            }
        },
        {
            "Effect": "Allow",
            "Action": [
                "iam:PassRole"
            ],
            "Resource": "*",
            "Condition": {
                "StringEquals": {
                    "iam:PassedToService": "forecast.amazonaws.com"
                }
            }
        }
    ]
}